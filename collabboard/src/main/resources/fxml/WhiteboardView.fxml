                                        <Separator orientation="VERTICAL" prefHeight="25"/>
                                        <Button fx:id="clearBtn" text="ðŸ—‘ï¸" onAction="#handleClearCanvas" style="-fx-padding: 8 12; -fx-font-size: 22;" prefHeight="45">
