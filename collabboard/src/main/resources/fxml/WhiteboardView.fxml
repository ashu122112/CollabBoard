                                            <tooltip><Tooltip text="Load Board State" /></tooltip>
                                        </Button>
                                        <Button fx:id="exportBtn" text="â¬‡ï¸" onAction="#handleExportAsImage" style="-fx-padding: 8 12; -fx-font-size: 22;" prefHeight="45">
