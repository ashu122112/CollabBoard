                                        </ToggleButton>
                                        <Separator orientation="VERTICAL" prefHeight="25"/>
                                        <ToggleButton fx:id="lockBoardButton" text="ðŸ”’" onAction="#handleLockBoard" visible="false" prefWidth="60" prefHeight="45" style="-fx-font-size: 22;">
