                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="closeTemplatesBtn" text="âœ•" onAction="#handleCloseTemplates" style="-fx-background-color: transparent; -fx-text-fill: #999; -fx-cursor: hand;"/>
                                    </children>
                                </HBox>
