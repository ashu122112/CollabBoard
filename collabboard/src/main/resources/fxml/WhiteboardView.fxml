                                        </ToggleButton>
                                        <ToggleButton fx:id="textTool" text="ðŸ“" onAction="#selectTextTool" toggleGroup="$toolGroup" style="-fx-font-size: 24;" prefWidth="50" prefHeight="45">
                                            <tooltip><Tooltip text="Text Tool" /></tooltip>
                                        </ToggleButton>
                                        <ToggleButton fx:id="noteTool" text="ðŸ—’ï¸" onAction="#selectStickyNoteTool" toggleGroup="$toolGroup" style="-fx-font-size: 24;" prefWidth="50" prefHeight="45">
