                                        </Button>
                                        <Button fx:id="redoBtn" text="â†·" onAction="#handleRedo" style="-fx-font-size: 24;" prefWidth="50" prefHeight="45">
                                            <tooltip><Tooltip text="Redo" /></tooltip>
                                        </Button>
                                        <Separator orientation="VERTICAL" prefHeight="25"/>
                                        <Button fx:id="saveBtn" text="ðŸ’¾" onAction="#handleSaveBoard" style="-fx-padding: 8 12; -fx-font-size: 22;" prefHeight="45">
