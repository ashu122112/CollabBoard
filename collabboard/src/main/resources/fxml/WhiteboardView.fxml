                    <children>
                        <VBox spacing="10" style="-fx-padding: 15;">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Participants" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="closeParticipantsBtn" text="âœ•" onAction="#handleCloseParticipants" style="-fx-background-color: transparent; -fx-text-fill: #999; -fx-cursor: hand;"/>
