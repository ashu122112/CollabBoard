                                        <Separator orientation="VERTICAL" prefHeight="25"/>
                                        <ColorPicker fx:id="colorPicker" prefWidth="80" prefHeight="45"/>
                                        <ToggleButton fx:id="eraserTool" text="ðŸ§¹" onAction="#selectEraserTool" toggleGroup="$toolGroup" style="-fx-font-size: 24;" prefWidth="50" prefHeight="45">
                                            <tooltip><Tooltip text="Eraser" /></tooltip>
