                    <children>
                        <VBox alignment="TOP_CENTER" StackPane.alignment="TOP_CENTER">
                            <children>
                                <HBox alignment="CENTER" spacing="6" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 8 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                                    <!-- ** THIS IS THE FIX ** -->
                                    <padding><Insets top="12" right="0" bottom="0" left="0"/></padding>
                                    <children>
                                        <fx:define><ToggleGroup fx:id="toolGroup"/></fx:define>
                                        <ToggleButton fx:id="selectTool" text="â†–ï¸" onAction="#selectSelectionTool" toggleGroup="$toolGroup" style="-fx-font-size: 24;" prefWidth="50" prefHeight="45">
