                                        <Separator orientation="VERTICAL" prefHeight="25"/>
                                        <ToggleButton fx:id="penTool" text="ðŸ–Šï¸" onAction="#selectPenTool" toggleGroup="$toolGroup" selected="true" style="-fx-font-size: 24;" prefWidth="50" prefHeight="45">
